{
  "name": "personal-expense-analytics",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm:dev:*\"",
    "dev:web": "corepack pnpm --filter web dev",
    "dev:worker": "corepack pnpm --filter worker dev",
    "build": "corepack pnpm -r build",
    "build:web": "corepack pnpm --filter web build",
    "build:worker": "corepack pnpm --filter worker build",
    "test": "corepack pnpm -r test",
    "test:worker": "corepack pnpm --filter worker test",
    "test:web": "corepack pnpm --filter web test",
    "test:watch": "corepack pnpm --filter worker test:watch",
    "test:parsers": "npx tsx scripts/test-parsers.ts",
    "test:e2e": "npx playwright test",
    "test:e2e:smoke": "npx playwright test e2e/login.spec.ts e2e/smoke-settings-theme-i18n.spec.ts e2e/smoke-transactions-min-amount.spec.ts e2e/smoke-merchant-drilldown-route.spec.ts --project=chromium --reporter=line",
    "test:e2e:smoke:ci": "npx playwright test e2e/login.spec.ts e2e/smoke-settings-theme-i18n.spec.ts e2e/smoke-transactions-min-amount.spec.ts e2e/smoke-merchant-drilldown-route.spec.ts --project=chromium --reporter=line,html",
    "generate-fixtures": "npx tsx scripts/generate-fixtures.ts",
    "lint": "corepack pnpm -r lint",
    "verify": "corepack pnpm lint && corepack pnpm -r typecheck && corepack pnpm -r test && corepack pnpm -r build",
    "typecheck": "corepack pnpm -r typecheck",
    "rebuild:dry": "node scripts/run_rebuild.mjs --dry",
    "rebuild:apply": "node scripts/run_rebuild.mjs --apply",
    "diag:prod": "node scripts/diag_prod.mjs",
    "diag:other:prod": "node scripts/diag_other_prod.mjs",
    "other:reclassify:prod:dry": "node scripts/reclassify_other_prod.mjs",
    "other:reclassify:prod:apply": "node scripts/reclassify_other_prod.mjs --apply",
    "verify:prod": "node scripts/verify_prod.mjs",
    "ingest:pdf": "node scripts/ingest_pdf.mjs",
    "ingest:pdf:verify": "node scripts/ingest_pdf.mjs --verify",
    "ingest:xlsx": "npx tsx scripts/ingest_xlsx.ts",
    "ingest:xlsx:verify": "npx tsx scripts/ingest_xlsx.ts --verify",
    "merchant:normalize:backfill": "node scripts/backfill-merchant-normalization.mjs",
    "setup:local": "corepack pnpm install && corepack pnpm db:migrate:local",
    "db:migrate:local": "corepack pnpm --filter worker db:migrate:local",
    "db:migrate:remote": "corepack pnpm --filter worker db:migrate:remote",
    "db:seed": "npx tsx scripts/seed-data.ts > seed.sql && echo 'Seed SQL generated to seed.sql'",
    "apply-rules": "node scripts/quick-apply-rules.mjs"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "concurrently": "^9.0.0",
    "tsx": "^4.19.1",
    "typescript": "^5.3.3",
    "xlsx": "^0.18.5"
  },
  "pnpm": {
    "overrides": {
      "@remix-run/router": "1.23.2"
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
