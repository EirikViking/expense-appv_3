{
  "name": "@expense/worker",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run --outdir=dist",
    "deploy": "wrangler deploy",
    "deploy:review": "wrangler deploy --env review",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:migrate:local": "wrangler d1 migrations apply expense-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply expense-db --remote",
    "lint": "tsc --noEmit --pretty false"
  },
  "dependencies": {
    "@expense/shared": "workspace:*",
    "hono": "^4.11.9",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260217.0",
    "typescript": "^5.3.3",
    "vitest": "^2.1.0",
    "wrangler": "^4.66.0"
  }
}

